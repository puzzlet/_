[include]
    # works both in Linux/Windows
    path = .gitconfig_private
[core]
    editor = /usr/bin/vim
    attributesfile = ~/.gitattributes
    excludesfile = ~/.gitignore
    autocrlf = false
    eol = lf
    filemode = true
    trustctime = false
[push]
    default = upstream

[diff]
    tool = vimdiff
[diff "exif"]
    textconv = exiftool -s2 -common --filename

[rebase]
    autostash = true
[merge]
    ff = only
    tool = vimdiff
[mergetool]
    keepBackup = false
    keepTemporaries = false

[color]
    ui = auto
[bash]
    showDirtyState = true
